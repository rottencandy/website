<nav>
    <a href="/">Home</a> | <a href="/blog">Posts</a>
</nav>

<main>
    <article>
        <header>
            <h1>{{ title }}</h1>
            <strong>
                <time datetime="{{ date | date }}">{{ date | date('do LLL, yyyy') }}</time>
            </strong>
        </header>

        <hr/>

        <section>
            {{ content | safe }}
        </section>
    </article>

    <hr/>

    <footer>
        <p>
            <em>
                If you have any comments or suggestions, I'd love to know. Please feel free to email me.
            </em>
        </p>
    </footer>
</main>
